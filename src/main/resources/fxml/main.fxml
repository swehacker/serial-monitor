<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="com.swehacker.SerialMonitor" xmlns:fx="http://javafx.com/fxml" styleClass="root" spacing="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Port"/>
        <ChoiceBox fx:id="port" />
        <Label text="Baud"/>
        <ChoiceBox fx:id="baudrate" />
        <Button text="Connect" onAction="#handleConnect"/>
    </HBox>

    <TextArea fx:id="response" disable="true" />

    <HBox spacing="10" alignment="bottom_right">
        <TextField fx:id="send" />
        <Button text="Send"/>
    </HBox>
</VBox>